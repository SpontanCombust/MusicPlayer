<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER" spacing="20.0" stylesheets="@player-view.css" type="VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Canvas height="200.0" width="200.0" />

   <Label fx:id="musicTitleText" text="Music title" />
   <Label fx:id="musicTimeText" text="Music time" />
   <Slider fx:id="musicTimelineSlider" onMouseDragged="#onMusicSliderCursorDragged" onMousePressed="#onMusicSliderMousePressed" onMouseReleased="#onMusicSliderMouseReleased" />
   <HBox alignment="TOP_CENTER">
      <children>
         <Button mnemonicParsing="false" onAction="#onPreviousTrackClick" text="Previous" />
         <Button fx:id="playPauseButton" onAction="#onPlayPauseClick" text="Play/Pause" />
         <Button mnemonicParsing="false" onAction="#onNextTrackClick" text="Next" />
      </children>
   </HBox>
</fx:root>
