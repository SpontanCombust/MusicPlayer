<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<fx:root fx:id="rootPane" minHeight="-Infinity" minWidth="-Infinity" type="VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ListView fx:id="musicListView" onMouseClicked="#onTrackSelected" VBox.vgrow="ALWAYS" />
      <HBox>
         <children>
            <Button fx:id="loadMusicButton" mnemonicParsing="false" onAction="#onLoadMusicButtonClick" text="Load music" />
            <Button fx:id="saveMusicDatabaseButton" mnemonicParsing="false" onAction="#onSaveMusicDatabaseButtonClick" text="Save music data" />
            <Button fx:id="loadMusicDatabaseButton" mnemonicParsing="false" onAction="#onLoadMusicDatabaseButtonClick" text="Load music data" />
         </children>
      </HBox>
   </children>
</fx:root>
